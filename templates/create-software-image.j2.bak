        
  - name: "Creating the {{ image_backup | default(image_name, true) }} software image from the {{ clone_from }} image"
    brightcomputing.bcm92.software_image:
      name: {{ image_backup | default(image_name, true) }}
      cloneFrom: {{ clone_from }}
      path: {{ image_path }}
      
  - name: Wait until initrd is generated
    wait_for:
      path: "{{ image_path }}/boot/initrd-{{ kernel_release }}"
