- hosts: all
  gather_facts: true
  vars_files:
    - /root/.road-runner/install_config.yaml
    
  tasks:
        
    - name: preparing to install packages
      ansible.builtin.template:
        src: "{{ ansible_local['custom']['install_dir'] }}/templates/headnode-install-package-preamble.j2"
        dest: "{{ ansible_local['custom']['install_dir'] }}/tmp/packages-{{ index }}.yaml"
        mode: "0644"